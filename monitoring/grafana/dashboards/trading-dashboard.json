{
  "dashboard": {
    "title": "ACIS Trading Platform Dashboard",
    "panels": [
      {
        "id": 1,
        "title": "Portfolio Value",
        "type": "graph",
        "targets": [
          {
            "expr": "portfolio_total_value",
            "legendFormat": "Total Value"
          }
        ]
      },
      {
        "id": 2,
        "title": "Daily P&L",
        "type": "graph",
        "targets": [
          {
            "expr": "daily_pnl",
            "legendFormat": "P&L"
          }
        ]
      },
      {
        "id": 3,
        "title": "Active Positions",
        "type": "stat",
        "targets": [
          {
            "expr": "active_positions_count",
            "legendFormat": "Positions"
          }
        ]
      },
      {
        "id": 4,
        "title": "Strategy Performance",
        "type": "table",
        "targets": [
          {
            "expr": "strategy_returns",
            "format": "table"
          }
        ]
      },
      {
        "id": 5,
        "title": "Order Execution Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "order_success_rate",
            "legendFormat": "Success Rate"
          }
        ]
      },
      {
        "id": 6,
        "title": "API Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "http_request_duration_seconds",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ]
      }
    ]
  }
}